<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MealMitra - Tiffin Service Management</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Essential navigation styles */
        .nav-links {
            display: flex;
            list-style: none;
        }

        .hamburger {
            display: none;
        }

        /* Mobile menu styles */
        @media screen and (max-width: 768px) {
            .nav-links {
                display: none;
                width: 100%;
                position: absolute;
                top: 70px;
                left: 0;
                background: white;
                flex-direction: column;
                align-items: center;
                padding: 20px 0;
                z-index: 100;
                box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            }

            .nav-links.nav-active {
                display: flex;
            }

            .hamburger {
                display: block;
                cursor: pointer;
            }

            .hamburger span {
                display: block;
                width: 25px;
                height: 3px;
                background-color: #333;
                margin: 5px 0;
            }

            .nav-links li {
                margin: 15px 0;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <h1>MealMitra</h1>
            </div>
            <div class="hamburger">
             
                <span></span>
                <span></span>
                <span></span>
            </div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#partners">Tiffin Partners</a></li>
                <li><a href="#footer">About Us</a></li>
                <% if (!isAuthenticated) { %>
                    <li><a href="/user/login">Login</a></li>
                <% } else { %>
                    <li><a href="/user/myprofile">Profile</a></li>
                    <li><a href="/user/myorders">My Orders</a></li>
                    <li><a href="/user/logout">Logout</a></li>
                <% } %>
            </ul>
        </nav>
    </header>

    <main>
        <section id="hero" style="background-image: url('https://images.unsplash.com/photo-1540189549336-e6e99c3679fe?q=80')">
            <h2>Welcome to MealMitra</h2>
            <p>Your trusted partner for healthy and delicious tiffin services</p>
            <button class="cta-button" onclick="scrollToPartners()">Order Now</button>
        </section>

        <section id="partners" class="tiffin-partners">
            <h2 style="margin:0 0 15px 150px">Our Tiffin Partners</h2>
           
            <div class="partners-grid">
                <% sellers.forEach(seller=>{ %>
                    
                        <div class="partner-card">
                            <img src="/images/<%= seller.image %>" alt="Homestyle Kitchen">
                            <h3><%= seller.username %></h3>
                            <p>Specializing in home-cooked meals</p>
                            <!-- <button>View Menu</button> -->
                            <a href="/user/menu/<%= seller._id %>" class="menu-btn">View Menu</a>
        
                        </div>
                    
                    <% }) %>
               
            </div>
        </section>

        <section id="features">
            <h2 style="margin:0 0 15px 150px" >Why Choose MealMitra?</h2>
            <div class="features-container">
                <div class="feature">
                    <img src="https://img.icons8.com/ios/50/000000/restaurant.png" class="feature-icon" alt="Quality Food">
                    <h3>Quality Food</h3>
                    <p>Fresh ingredients and hygienic preparation</p>
                </div>
                <div class="feature">
                    <img src="https://img.icons8.com/ios/50/000000/delivery--v1.png" class="feature-icon" alt="Timely Delivery">
                    <h3>Timely Delivery</h3>
                    <p>On-time delivery to your doorstep</p>
                </div>
                <div class="feature">
                    <img src="https://img.icons8.com/ios/50/000000/settings.png" class="feature-icon" alt="Customizable Plans">
                    <h3>Daily menu Plans</h3>
                    <p>Flexible meal plans to suit your needs</p>
                </div>
            </div>
        </section>
    </main>

    <footer id="footer">
        <div class="footer-container">
            <!-- Company Info Section -->
           
            <div class="footer-section company-info">
                <div class="footer-logo" style="text-align: center;">
                    <h2>MealMitra</h2>
                    
                        <br>
                        <br>
                   
                    <p>Delivering Happiness, One Meal at a Time</p>
                </div>
             </div>

            <!-- Services Section -->
            <div class="footer-section services">
                <h3>Our Services</h3>
                <ul>
                    <li><a href="#daily-meals">Daily Meals</a></li>
                    
                    <li><a href="#corporate">Corporate Orders</a></li>
                    <li><a href="#special-events">Special Events</a></li>
                </ul>
            </div>

            <!-- Quick Links Section -->
            <div class="footer-section quick-links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#about">About Us</a></li>
                    <li><a href="#partners">Partner With Us</a></li>
                    <!-- <li><a href="#blog">Food Blog</a></li> -->
                    <li><a href="#careers">Careers</a></li>
                </ul>
            </div>

            <!-- Contact Section -->
            <div class="footer-section contact-info">
                <h3>Contact Us</h3>
                <div class="contact-details">
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>123 Food Street, Mumbai, Maharashtra 400001</p>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <p>+91 1234567890</p>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <p>support@mealmitra.com</p>
                    </div>
                </div>
            </div>

           
        </div>

        <!-- Footer Bottom -->
        <div class="footer-bottom">
            <div class="footer-bottom-content">
                <p>&copy; 2024 MealMitra. All rights reserved.</p>
                <div class="footer-bottom-links">
                    <a href="#privacy">Privacy Policy</a>
                    <a href="#terms">Terms & Conditions</a>
                    <a href="#faq">FAQ</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- <script src="/script.js"></script> -->
    <script src="https://kit.fontawesome.com/your-kit-code.js"></script>
    <script>
       document.addEventListener('DOMContentLoaded', function () {
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');

    hamburger.addEventListener('click', function () {
        navLinks.classList.toggle('nav-active');
    });
});

function scrollToPartners() {
    const partnersSection = document.querySelector('.tiffin-partners');
    if (partnersSection) {
        partnersSection.scrollIntoView({ behavior: 'smooth' });
    }
}
    </script>
</body>
</html>
