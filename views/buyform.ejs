        <!-- New input field for quantity -->
        <label for="quantity">
            <i class="fas fa-sort-numeric-up"></i> Quantity:
        </label>
        <input type="number" 
               id="quantity" 
               name="quantity" 
               min="1" 
               placeholder="Enter quantity"
               required><br><br>

        <label for="preferredTime">
            <i class="fas fa-clock"></i> Preferred Time:
        </label>
        <input type="text" 
               id="preferredTime" 
               name="preferredTime" 
               placeholder="Enter preferred delivery time"
               required><br><br>

        <div class="payment-options">
            <label class="payment-label">
                <i class="fas fa-money-bill"></i> Payment Method:
            </label>
            <div class="radio-group">
                <div class="radio-option">
                    <input type="radio" 
                           id="cod" 
                           name="paymentMethod" 
                           value="cod" 
                           required>
                    <label for="cod">
                        <i class="fas fa-hand-holding-dollar"></i>
                        Cash on Delivery
                    </label>
                </div>
