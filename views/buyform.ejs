        if("<%= message %>"){
                alert("<%= message %>")
        }
    </script>
</head>
<body>
    <form action="/user/buy/<%= menuId %>" method="post">
        <!-- Add hidden fields for menuId and sellerId -->
        <input type="hidden" name="menuId" value="<%= menuId %>">
        <input type="hidden" name="sellerId" value="">
        
